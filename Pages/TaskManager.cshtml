            });

            $(".task-checkbox").change(function () {
                let index = $(this).data("index");
                tasks[index].completed = $(this).is(":checked");
                localStorage.setItem("tasks", JSON.stringify(tasks));
                renderTasks();
            });
            $(".delete-btn").click(function () {
                let index = $(this).data("index");
                tasks.splice(index, 1);
                localStorage.setItem("tasks", JSON.stringify(tasks));
                renderTasks();
            });
        }
    });
